<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/icons">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:id="@+id/thumb_single"
        android:background="@color/icons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/judul_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/album_title"
        android:textSize="@dimen/backdrop_title"
        android:fontFamily="serif-monospace"
        android:text="HACTIV SCHPOLARSHIP HULAHUP GANTENG BINGITS"
        android:layout_below="@+id/thumb_single"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tanggal_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/judul_single"
        android:text="Dipublikasi sejak 12 Maret 2015"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"/>
    <TextView
        android:id="@+id/buat_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tanggal_single"
        android:text="oleh HACKTIV 8"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/buat_single">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:id="@+id/a12"
            android:background="@color/icons"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/student_male_528px"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:id="@+id/a123"
            android:background="@color/icons"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/a12"
            android:src="@drawable/student_male_528px"/>

    </RelativeLayout>


</RelativeLayout>
</ScrollView>